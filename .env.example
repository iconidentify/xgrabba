# XGrabba Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env files with real credentials!

# API key for authenticating extension requests to the backend
# Generate a secure random string (e.g., openssl rand -hex 32)
API_KEY=your-secure-api-key-here

# Grok AI API key from https://x.ai
# Used for intelligent video filename generation
GROK_API_KEY=your-grok-api-key-here

# Server configuration (optional - defaults shown)
SERVER_HOST=0.0.0.0
SERVER_PORT=9847

# Storage paths (optional - defaults shown)
STORAGE_PATH=/data/videos
STORAGE_TEMP_PATH=/data/temp

# Worker configuration (optional)
WORKER_COUNT=2

# Grok model (optional)
GROK_MODEL=grok-beta
